        <Label x:Name="ContentLBL_Copy" Content="Nowe hasło" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="130" FontSize="14" FlowDirection="RightToLeft" Height="32"/>
        <PasswordBox x:Name="OLDPass" Background="#FFF5F6FA" BorderBrush="#FF5F27CD" SelectionBrush="#FF8B6FC3" FontSize="14" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="145,38,0,0" VerticalAlignment="Top" Width="210" Height="22"/>

    </Grid>
