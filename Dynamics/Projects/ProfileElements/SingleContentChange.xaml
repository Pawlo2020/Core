<UserControl x:Class="Dynamics.Projects.ProfileElements.SingleContentChange"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dynamics.Projects.ProfileElements"
             mc:Ignorable="d" 
             d:DesignHeight="178" d:DesignWidth="373" Background="#FFDFF1F0">
    <Grid>
        <Button x:Name="UpdateBut" Content="Zaktualizuj dane" HorizontalAlignment="Left" Margin="241,145,0,0" VerticalAlignment="Top" Width="122" Background="{x:Null}" BorderBrush="#FF5F27CD" Foreground="#FF5F27CD" FontSize="14" Click="UpdateBut_Click"/>
        <TextBox x:Name="ChangeBox" HorizontalAlignment="Left" Height="22" Margin="145,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Background="#FFF5F6FA" BorderBrush="#FF5F27CD" SelectionBrush="#FF8B6FC3" FontSize="16" VerticalContentAlignment="Center"/>
        <Label x:Name="ContentLBL"  HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="130" FontSize="14" FlowDirection="RightToLeft" Height="32"/>

    </Grid>
</UserControl>
